pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
function _init()
  p={}
  p.x=64
  p.y=64
  p.dx=2
  p.dy=2
end

function _update()
  if(btn(⬅️))p.x=move("x",⬅️)
  if(btn(➡️))p.x=move("x",➡️)
  if(btn(⬆️))p.y=move("y",⬅️)
  if(btn(⬇️))p.y=move("y",➡️)
end

function _draw()
  cls()
  print("x"..p.x)
  print("y"..p.y)
  spr(1, p.x, p.y)
end

function move(c,d)
  local mod
  if(d==⬅️)mod=-p.dx
  if(d==➡️)mod=p.dx
  local new=p[c]+mod
  if(d==⬅️)then
    if(p[c]==0) new=127
  end
  if(d==➡️)then
    if(p[c]==127) new=0
  end
  return new
end
